# Database
DATABASE_URL="postgresql://user:password@localhost:5432/ppttranslator?schema=public"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here-generate-with-openssl"

# OAuth Providers (Optional)
# Google OAuth
GOOGLE_CLIENT_ID=""
GOOGLE_CLIENT_SECRET=""

# GitHub OAuth  
GITHUB_CLIENT_ID=""
GITHUB_CLIENT_SECRET=""

# Email Service (for password reset and email verification)
# Using Resend (recommended) or SendGrid
EMAIL_FROM="noreply@example.com"
RESEND_API_KEY=""
# Or SendGrid
# SENDGRID_API_KEY=""

# Anthropic Claude API
ANTHROPIC_API_KEY="your-anthropic-api-key"
ANTHROPIC_MODEL="haiku"

# Supabase (Optional - for file storage)
NEXT_PUBLIC_SUPABASE_URL="your-supabase-url"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-supabase-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-supabase-service-role-key"

# Stripe (Optional - for payments)
STRIPE_SECRET_KEY=""
STRIPE_WEBHOOK_SECRET=""
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=""

# Redis (Optional - for caching and rate limiting)
REDIS_URL="redis://localhost:6379"

# Application Settings
TRANSLATION_CACHE_SIZE=1000
TRANSLATION_CACHE_TTL_MINUTES=60
PYTHON_TIMEOUT=60000

# Security
# Session settings
SESSION_MAX_AGE_DAYS=30
REMEMBER_ME_MAX_AGE_DAYS=90

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

