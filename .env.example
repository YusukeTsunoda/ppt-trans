# ===================================
# REQUIRED ENVIRONMENT VARIABLES
# ===================================

# Supabase Configuration (Required)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key
SUPABASE_PROJECT_ID=your-project-id

# Authentication Configuration (Required)
USE_REQUEST_SCOPED_AUTH=true
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=generate-with-openssl-rand-base64-32

# Anthropic API (Required for translation)
ANTHROPIC_API_KEY=your-anthropic-api-key

# ===================================
# OPTIONAL ENVIRONMENT VARIABLES
# ===================================

# Build Configuration
BUILD_ID_VALIDATION=true
DEPLOYMENT_TARGET=local

# Monitoring (Optional)
# SENTRY_DSN=https://your-sentry-dsn
# SENTRY_ORG=your-org
# SENTRY_PROJECT=your-project

# Feature Flags
ENABLE_CANARY_DEPLOYMENT=false
ENABLE_DUAL_WRITE=false
ENABLE_ENHANCED_ERROR_HANDLING=true

# Security
ALLOWED_ORIGINS=http://localhost:3000

# Database Migration
DATABASE_MIGRATION_STATUS=pending
ENABLE_DATABASE_AUDIT=true

# Performance
NODE_OPTIONS=--max-old-space-size=4096

# Development
LOG_LEVEL=info
ENABLE_DEBUG_MODE=false

# ===================================
# PRODUCTION ENVIRONMENT VARIABLES
# ===================================

# Production URLs (Set in production)
# NEXT_PUBLIC_APP_URL=https://your-domain.com
# NEXT_PUBLIC_API_URL=https://api.your-domain.com

# CDN Configuration (Optional)
# NEXT_PUBLIC_CDN_URL=https://cdn.your-domain.com

# Analytics (Optional)
# NEXT_PUBLIC_GA_TRACKING_ID=G-XXXXXXXXXX
# NEXT_PUBLIC_MIXPANEL_TOKEN=your-mixpanel-token

# Rate Limiting
# RATE_LIMIT_REQUESTS_PER_MINUTE=60
# RATE_LIMIT_REQUESTS_PER_DAY=1000