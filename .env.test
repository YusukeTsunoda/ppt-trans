# E2Eテスト用環境変数
# テスト実行時に使用される設定

# テストモードを有効化
NEXT_PUBLIC_TEST_MODE=true

# テスト用ポート
TEST_PORT=3001
BASE_URL=http://localhost:3001
NEXT_PUBLIC_APP_URL=http://localhost:3001
NO_DEV_SERVER=false

# 認証バイパス（開発時のみ）
TEST_BYPASS_AUTH=false

# テストユーザー情報
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=testpassword123

# MSWモックサーバー
USE_MSW_MOCKS=true

# タイムアウト設定
TEST_TIMEOUT=30000
TEST_NAVIGATION_TIMEOUT=15000

# デバッグ設定
SCREENSHOT_ON_FAILURE=true
VIDEO_ON_FAILURE=true
LOG_LEVEL=debug

# 並列実行設定
TEST_PARALLEL_WORKERS=1

# リトライ設定
TEST_RETRY_COUNT=2
