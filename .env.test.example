# ===================================
# E2Eテスト用環境変数
# ===================================
# このファイルを .env.test にコピーして、実際の値を設定してください
# cp .env.test.example .env.test

# テストユーザー認証情報（必須）
# 事前にSupabaseに登録されている実際のテストユーザー
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=Test123!
ADMIN_USER_EMAIL=admin@example.com
ADMIN_USER_PASSWORD=Admin123!

# アプリケーションURL
BASE_URL=http://localhost:3000
TEST_PORT=3000

# Supabase設定（必須）
NEXT_PUBLIC_SUPABASE_URL=http://localhost:54321
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-local-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# フィーチャーフラグ（機能の有効/無効）
FEATURE_RATE_LIMIT=false
FEATURE_PASSWORD_RESET=false
FEATURE_ADMIN_PANEL=false
FEATURE_BULK_UPLOAD=false

# テスト実行モード
CI=false
DEBUG=false
HEADLESS=true  # false にするとブラウザが表示される
TEST_TIMEOUT_MULTIPLIER=1  # CI環境では2に設定

# セキュリティ設定（E2E環境用）
NEXT_PUBLIC_TEST_MODE=true
DISABLE_RATE_LIMIT_IN_E2E=true
DISABLE_ORIGIN_CHECK_IN_E2E=true
CSRF_RELAXED_IN_E2E=true

# テストデータクリーンアップ
CLEANUP_AFTER_TEST=true
NO_DEV_SERVER=false